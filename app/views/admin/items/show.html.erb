<div class="container">
<h2>商品詳細</h2>

<table class="table">
  <tr>
    <td>商品画像</td>
  <%= image_tag @item.get_image(300,300) %>
  </tr>
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <td>商品説明</td>
    <td><%= @item.introduction %></td>
  </tr>
  <tr>
    <td>税抜価格</td>
    <td><%= @item.price_excluding_tax %></td>
  </tr>
 
</table>

<%= link_to '編集する', edit_admin_item_path, class: 'btn btn-success' %>

</div>