<div class="container p-3">
  <div class="row">

  <div class="col-md-12">
    <h3>注文履歴一覧</h3>
    <table class="table">
      <tr>
        <td>注文日</td>
        <td>注文個数</td>
        <td>支払い金額</td>
        <td>注文詳細</td>
      </tr>
      <% @orders.each do |order| %>
        <% order.order_details.each do |order_detail| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.address %></td>
        <td><%= order_detail.quentity %></td>
        <td><%= order.total_amount %></td>
        <td><%= link_to "表示する", orders_path(order.id), class: "btn btn-info" %></td>
       </tr>
      <% end %>
    <% end %>
    </table>

<%= paginate @orders %>
</div>